# Network RPC URLs
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key-here
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key-here

# Private Key (NEVER share or commit this!)
# Add your private key here (without 0x prefix)
PRIVATE_KEY=your-private-key-here

# Etherscan API Key for contract verification
# Get your API key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your-etherscan-api-key-here

# CoinMarketCap API Key for gas reporting (optional)
# Get your API key from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-here

# Gas Reporter Settings (optional)
REPORT_GAS=false

# Contract Sizer Settings (optional)
CONTRACT_SIZER=false

# Network Settings
NETWORK=sepolia

# Contract Addresses (filled automatically after deployment)
PLATFORM_ADDRESS=

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Safety Settings
# Set to true to enable additional safety checks
ENABLE_SAFETY_CHECKS=true

# Rate Limiting (DoS Protection)
MAX_REQUESTS_PER_MINUTE=60
MAX_DISPUTES_PER_ADDRESS=10
MIN_DISPUTE_INTERVAL=300

# Access Control
PAUSER_ROLE=0x65d7a28e3265b37a6474929f336521b332c1681b933f6cb9f3376673440d862a
ADMIN_ROLE=0xa49807205ce4d355092ef5a8a18f56e8913cf4a201fbe287825b095693c21775

# Emergency Settings
EMERGENCY_SHUTDOWN_ENABLED=true
EMERGENCY_CONTACT=admin@anonymous-arbitration.com

# ============================================
# PERFORMANCE OPTIMIZATION
# ============================================

# Compiler Optimization
SOLIDITY_OPTIMIZER_RUNS=800
ENABLE_IR_OPTIMIZATION=true

# Gas Optimization
GAS_PRICE_MULTIPLIER=1.2
MAX_GAS_LIMIT=8000000

# Caching
ENABLE_QUERY_CACHE=true
CACHE_TTL=3600

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_TRANSACTION_THRESHOLD=5000

# Gas Tracking
TRACK_GAS_USAGE=true
GAS_ALERT_THRESHOLD=500000

# Error Tracking
ENABLE_ERROR_LOGGING=true
ERROR_LOG_LEVEL=warn

# ============================================
# TESTING CONFIGURATION
# ============================================

# Arbitrator Settings (for testing)
ARBITRATOR_IDENTITY_PROOF=12345

# Dispute Settings (for testing)
TEST_STAKE_AMOUNT=1000
TEST_EVIDENCE_HASH=999888777
TEST_ETH_VALUE=0.001

# Test Network Settings
TEST_NETWORK_FORK=false
FORK_BLOCK_NUMBER=

# ============================================
# CI/CD CONFIGURATION
# ============================================

# Coverage Settings
CODECOV_TOKEN=your-codecov-token-here
COVERAGE_THRESHOLD=80

# Deployment Settings
AUTO_VERIFY_CONTRACTS=true
DEPLOYMENT_CONFIRMATION_BLOCKS=5

# ============================================
# ADVANCED SETTINGS
# ============================================

# Multi-signature Wallet (if applicable)
MULTISIG_WALLET_ADDRESS=
MULTISIG_THRESHOLD=2

# Timelock Settings
TIMELOCK_DELAY=86400

# Upgrade Settings (for upgradeable contracts)
UPGRADE_ADMIN=
PROXY_ADMIN=
